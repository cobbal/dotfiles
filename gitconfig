[user]
    name = Andrew Cobb
    email = acobb@cricut.com
[color]
    diff = auto
    status = auto
    branch = auto
[alias]
    dt = difftool
    ks = difftool
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    g = grep --break --heading --line-number
    addnw = !zsh -c 'git -c diff.noprefix=false diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'
    main-count = !zsh -c 'git fetch --all >/dev/null 2>&1 && git rev-list --left-right --count origin/main...$(git branch --show-current)'
    master-count = !zsh -c 'git fetch --all >/dev/null 2>&1 && git rev-list --left-right --count origin/master...$(git branch --show-current)'
    mc = main-count
[core]
    excludesfile = /Users/acobb/.gitignore_global
[push]
    default = current
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = Kaleidoscope
    noprefix = true
[difftool]
    prompt = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[mergetool]
    prompt = false
[merge]
    tool = Kaleidoscope
[help]
    autocorrect = 1
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[credential]
	helper = osxkeychain
[grep]
    extendRegexp = true
    lineNumber = true
[pull]
	ff = only
